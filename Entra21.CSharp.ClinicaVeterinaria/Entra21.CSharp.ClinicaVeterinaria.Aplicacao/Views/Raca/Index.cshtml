@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Lista de Raças</h1>

<div class="row mb-2">
    <div class="text-end">
        <a href="/raca/cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <!-- Cabecalho da tabela-->
        <tr>
            <!-- Linha da tabela-->
            <th>Código</th> <!-- Coluna especifica do cabecalho-->
            <th>Nome</th>
            <th>Espécie</th>
        </tr>
    </thead>
    <tbody>
        <!-- Lugar dos registros da tabela-->
        @foreach (var raca in ViewBag.Racas)
        {
            <tr>
                <td>@raca.Id</td> <!-- Coluna especifica para body-->
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>
            </tr>
        }
    </tbody>
</table>